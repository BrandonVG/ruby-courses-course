<div class="card" id="<%= dom_id course %>">
  <div class="card-header">
    <i class="fa fa-book"></i>
    <%= link_to course.title, course_path(course) %>
  </div>
  <div class="card-body">
    <%= course.description %>
  </div>
  <div class="card-footer">
    <div class="col">
      <i class="far fa-clock"></i>
      <%= course.created_at.strftime('%d/%b/%Y') %>
    </div>
    <div class="col">
      <i class="fa fa-chalkboard-teacher"></i>
      <%= course.user %>
    </div>
  </div>
  <div class="card-footer">
    <div class="row justify-content-center">
      <div class="col-2">
        <%= link_to course, class:'btn btn-primary' do  %>
          <i class="fa-solid fa-eye"></i>
        <% end %>
      </div>
      <div class="col-2">
        <%= link_to edit_course_path(course), class:'btn btn-secondary' do %>
          <i class="fa-solid fa-pen"></i>
        <% end %>
      </div>
      <div class="col-2">
        <%= button_to course, method: :delete,  form: {data: {turbo_confirm: 'Are you sure?'}}, class:'btn btn-danger' do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>

