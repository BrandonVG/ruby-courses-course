<div class="card" id="<%= dom_id course %>">
  <div class="card-header">
    <i class="fa fa-graduation-cap"></i>
    <%= link_to course.title, course_path(course) %>
  </div>
  <div class="card-body">
    <small><%= course.description %></small>
  </div>
  <div class="card-footer">
    <p class="text-center"><%= number_to_currency(course.price)  %></p>
  </div>
  <div class="card-footer">
    <div class="row">
      <div class="col-md-6">
        <p><i class="fa fa-globe-africa"></i> <%= course.language %></p>
      </div>
      <div class="col-md-6">
        <p class="text-end"><i class="fa fa-signal"></i><%= course.level %></p>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <div class="row">
      <div class="col-md-6">
        <p><i class="far fa-clock"></i><%= course.created_at.strftime('%d/%b/%Y') %></p>
      </div>
      <div class="col-md-6">
        <p class="text-end"><i class="fa fa-chalkboard-teacher"></i><%= course.user %></p>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <div class="row justify-content-center">
      <div class="col-2">
        <%= link_to course, class:'btn btn-primary' do  %>
          <i class="fa-solid fa-eye"></i>
        <% end %>
      </div>
      <div class="col-2">
        <%= link_to edit_course_path(course), class:'btn btn-secondary' do %>
          <i class="fa-solid fa-pen"></i>
        <% end %>
      </div>
      <div class="col-2">
        <%= button_to course, method: :delete,  form: {data: {turbo_confirm: 'Are you sure?'}}, class:'btn btn-danger' do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>

