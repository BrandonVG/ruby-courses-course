<div id="<%= dom_id enrollment %>" class="container">
  <div class="card">
    <div class="card-header">
      <p><i class="fa fa-user"></i> <%= link_to enrollment.user.username, user_path(enrollment.user) %> </p>
      <p><i class="fa fa-clock"></i> <%= time_ago_in_words(enrollment.updated_at) %> </p>
      <p><i class="fa fa-graduation-cap"></i> <%= link_to enrollment.course, course_path(enrollment.course) %> </p>
    </div>
    <div class="card-body">
      <p class="text-warning"><i class="fa fa-star" ></i><b><%= enrollment.rating %></b></p>
      <p><i class="fa fa-comment"></i> <small><%= enrollment.review %> </small></p>
    </div>
    <% if current_user %>
      <div class="card-footer">
        <% if policy(enrollment).edit? %>
          <%= link_to 'Edit Review', edit_enrollment_path(enrollment) %>
        <% end %>
        <%= link_to 'Back to course', course_path(enrollment.course) %>
      </div>
    <% end %>
  </div>
</div>
